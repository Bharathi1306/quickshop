pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "bharathi136/quickshop"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Set Version Tag') {
            steps {
                script {
                    // Use short git commit hash as tag
                    GIT_COMMIT_HASH = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()
                    env.IMAGE_TAG = "${DOCKER_IMAGE}:${GIT_COMMIT_HASH}"
                    echo "Docker image tag will be: ${env.IMAGE_TAG}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${env.IMAGE_TAG} ."
            }
        }

        stage('Login & Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', 
                                                 usernameVariable: 'DOCKERHUB_USERNAME', 
                                                 passwordVariable: 'DOCKERHUB_PASSWORD')]) {
                    sh 'echo $DOCKERHUB_PASSWORD | docker login -u $DOCKERHUB_USERNAME --password-stdin'
                    sh "docker push ${env.IMAGE_TAG}"
                }
            }
        }
    }

    post {
        success {
            echo "üéâ Docker image ${env.IMAGE_TAG} built and pushed successfully!"
        }
        failure {
            echo "‚ö†Ô∏è Pipeline failed! Check the logs for errors."
        }
        always {
            // optional: logout from Docker Hub
            sh 'docker logout || true'
        }
    }
}
