pipeline {
    agent any

    environment {
        DOCKERHUB_USERNAME = "bharathi136"
        DOCKERHUB_PASSWORD = credentials('dockerhub-password') // Add in Jenkins credentials
        PROJECT_NAME = "quickshop"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Cloning repository..."
                git url: 'https://github.com/Bharathi1306/quickshop.git', branch: 'main'
            }
        }

        stage('Build Docker Images') {
            steps {
                echo "Building Docker images..."
                sh "docker build -t ${DOCKERHUB_USERNAME}/order-service frontend/quickshop-services/order-service/"
                sh "docker build -t ${DOCKERHUB_USERNAME}/product-service frontend/quickshop-services/product-service/"
                sh "docker build -t ${DOCKERHUB_USERNAME}/user-service frontend/quickshop-services/user-service/"
            }
        }

        stage('Push Docker Images') {
            steps {
                echo "Logging into Docker Hub..."
                sh "echo ${DOCKERHUB_PASSWORD} | docker login -u ${DOCKERHUB_USERNAME} --password-stdin"

                echo "Pushing images..."
                sh "docker push ${DOCKERHUB_USERNAME}/order-service"
                sh "docker push ${DOCKERHUB_USERNAME}/product-service"
                sh "docker push ${DOCKERHUB_USERNAME}/user-service"
            }
        }

        stage('Cleanup') {
            steps {
                echo "Removing local Docker images..."
                sh "docker rmi ${DOCKERHUB_USERNAME}/order-service || true"
                sh "docker rmi ${DOCKERHUB_USERNAME}/product-service || true"
                sh "docker rmi ${DOCKERHUB_USERNAME}/user-service || true"
            }
        }
    }

    post {
        always {
            echo "Pipeline finished!"
        }
        success {
            echo "All stages completed successfully."
        }
        failure {
            echo "Pipeline failed! Check the logs."
        }
    }
}
