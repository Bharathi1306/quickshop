pipeline {
    agent any

    environment {
        DOCKERHUB_USERNAME = "bharathi136"
        DOCKERHUB_PASSWORD = credentials('dockerhub-password') // Make sure you add this in Jenkins credentials
        PROJECT_NAME = "quickshop"
    }

